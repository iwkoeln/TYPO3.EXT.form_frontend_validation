{
	"name": "r3h6/form-frontend-validation",
	"type": "typo3-cms-extension",
	"description": "Frontend validation for the TYPO3 form framework.",
	"authors": [],
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"require": {
		"php": ">= 7.2, < 7.5",
		"typo3/cms-core": "^9.5 || ^10.4 || ^11.0",
		"typo3/cms-form": "^9.5 || ^10.4 || ^11.0"
	},
	"require-dev": {
		"saschaegerer/phpstan-typo3": "^0.13.1",
		"friendsofphp/php-cs-fixer": "^2.18",
		"typo3/coding-standards": "^0.2.0",
		"helmich/typo3-typoscript-lint": "^2.4",
		"phpmd/phpmd": "^2.9",
		"nimut/testing-framework": "6.x-dev"
	},
	"autoload": {
		"psr-4": {
			"R3H6\\FormFrontendValidation\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"R3H6\\FormFrontendValidation\\Tests\\": "Tests"
		}
	},
	"replace": {
		"r3h6/form-frontend-validation": "self.version",
		"typo3-ter/form-frontend-validation": "self.version"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/web",
			"extension-key": "form_frontend_validation"
		}
	},
	"scripts": {
		"ci:php:lint": [
			"find *.php Classes Configuration Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l"
		],
		"ci:php:md": [
			"phpmd Classes/ text phpmd-ruleset.xml"
		],
		"ci:php:cs": [
			"php-cs-fixer fix -v --dry-run --using-cache false --diff --diff-format=udiff"
		],
		"ci:php:stan": [
			"phpstan analyse"
		],
		"ci:ts:lint": [
			"typoscript-lint -c typoscript-lint.yml --ansi -n --fail-on-warnings -vvv"
		],
		"ci:test:unit": [
			"phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/"
		],
		"ci:test:functional": [
			"phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional/"
		],
		"fix:php:cs": [
			"php-cs-fixer fix"
		]
	}
}
